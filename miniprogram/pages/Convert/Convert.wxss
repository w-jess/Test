/* pages/r2/r2.wxss */

.user {
  width: 100%;
  background-color: white;
  box-shadow: 4rpx 4rpx 4rpx #ccc;
  z-index: 12;
}

.caption {
  text-align: center;
  font-size: 40rpx;
  padding: 40rpx 0;
  color: #353535;
  border-bottom: 2rpx solid #b2b2b2;
}

.user-number {
  color: #888888;
  padding: 20rpx 20rpx;
  z-index: 10;
}

.user-number-str {
  font-size: 80rpx;
}

.user-number-tip {
  font-size: 40rpx;
}

.cursor {
  animation: twinkle 0.8s alternate infinite;
}

@keyframes twinkle {
  from {
    opacity: 0.1;
  }

  to {
    opacity: 1;
  }
}

.hline {
  border-bottom: 2rpx solid #b2b2b2;
}

.user-chn {
  font-size: 60rpx;
  padding: 20rpx 20rpx;
  min-height: 132rpx;
  color: #353535;
}

.user-chn .icon {
  min-width: 60rpx;
  margin: 0 40rpx;
  height: 60rpx;
  width: 60rpx;
}

.mask {
  position: fixed;
  left: 0px;
  top: 0px;
  width: 100%;
  height: 100%;
  background-color: #888888;
  z-index: 8;
  opacity: 0.5;
}

.keyboard {
  width: 100%;
  position: fixed;
  bottom: 0rpx;
  z-index: 10;
}

.button-number {
  border-radius: 0;
  font-size: 60rpx;
  line-height: 2;
}

.button-number::after {
  border: solid 1px #b2b2b2;
  border-radius: 0;
}

.button-str::after {
  border: solid 1px #b2b2b2;
  border-radius: 0;
}

.button-str {
  border-radius: 0;
  font-size: 40rpx;
  line-height: 2;
}

.button-str .icon {
  padding-top: 30rpx;
  height: 60rpx;
  width: 60rpx;
}

.result-board {
  min-height: 920rpx;
  margin-top: 40rpx;
  width: 100%;
  flex: 1 1 auto;
}

.result-card {
  position: relative;
  /* animation: leftmove 0.5s;    */
  background-color: white;
  margin: 20rpx;
  padding: 10rpx 20rpx;
  box-shadow: 4rpx 4rpx 4rpx #ccc;
}

.result-card .result-item {
  margin: 10rpx;
  display: block;
}

.result-card .num {
  font-size: 80rpx;
  color: #888888;
}

.result-card .chn {
  color: #353535;
  font-size: 60rpx;
}

.clear {
  margin: 22rpx 0 28rpx 0;
}

.text-button {
  border: none;
  color: #576b95;
  background: transparent;
  background-color: none;
  font-size: 26rpx;
}

@keyframes moveright {
  from {
    transform: translateX(var(--to-left));
  }

  to {
    transform: translateX(0);
  }
}

@keyframes moveleft {
  from {
    transform: translateX(var(--to-left));
  }

  to {
    transform: translateX(-375px);
  }
}
